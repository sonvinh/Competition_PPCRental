@model PPCRental_Project.Models.ABOUT_US

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Admin/Account/Login");
    }
    else
    {
        if (Session["UserRole"].ToString()!="2")
        {
            Response.Redirect("~/Home/Error");
        }
    }
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit","AboutUs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ABOUT_US</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Contents, new { @Style="width:280px; height:250px"})
                @Html.ValidationMessageFor(model => model.Contents)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Adress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Adress, new { @Style = "width:280px" })
                @Html.ValidationMessageFor(model => model.Adress)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Srcipts {
    @Scripts.Render("~/bundles/jqueryval")
}
